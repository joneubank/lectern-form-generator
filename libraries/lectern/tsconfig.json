{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "module": "commonjs",
    "strict": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/*"]
}
